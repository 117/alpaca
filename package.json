{
  "name": "@master-chief/alpaca",
  "version": "3.0.1",
  "description": "a TypeScript Node.js library for the https://alpaca.markets REST API and WebSocket streams",
  "author": "master-chief",
  "contributors": [
    "lbstr",
    "AqilCont",
    "KalebMills"
  ],
  "license": "ISC",
  "keywords": [
    "alpaca",
    "alpaca-trade-api-js",
    "alpaca trade api",
    "trading",
    "exchange",
    "bot",
    "alpaca markets",
    "markets",
    "stocks",
    "stock"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --outDir dist/commonjs --moduleResolution node --allowSyntheticDefaultImports -d --module commonjs src/*.ts",
    "build:esm": "tsc --outDir dist/esm --moduleResolution node --allowSyntheticDefaultImports -d --target es2020 src/*.ts",
    "clean": "rimraf dist types",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:watch": "jest --watchAll"
  },
  "exports": {
    "require": "./dist/commonjs/index.js",
    "import": "./dist/esm/index.js",
    "default": "./dist/esm/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/117/alpaca"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "dependencies": {
    "events": "^3.2.0",
    "limiter": "^1.1.5",
    "node-fetch": "^2.6.0",
    "qs": "^6.9.4",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node-fetch": "^2.5.7",
    "@types/qs": "^6.9.3",
    "@types/ws": "^7.2.4",
    "jest": "^26.4.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  }
}
